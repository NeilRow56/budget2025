

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // uses connection pooling
  directUrl = env("DATABASE_URL_UNPOOLED") // uses a direct connection
}

enum UserRole {
 ADMIN
 USER
}

model UserSettings {
  userId         String @id             
  currency       String    
  
          
}

model Transaction {
    id            String  @id @default(cuid())
    createdAt     DateTime    @default(now())
    updatedAt     DateTime    @updatedAt
    amount        Float
    description   String  
    date          DateTime        
    type          String      @default("income")
    category      String
    categoryIcon  String
    userId        String 

    
}

model Category {
    
    name          String   
    icon          String   
    type          String   @default("income")
    createdAt     DateTime @default(now())
    userId        String   
    

    @@unique([name, userId, type])
}

model MonthHistory {
    
    day           Int
    month         Int
    year          Int
    income        Float
    expense       Float
    userId        String 
    
    @@id([day,month, year, userId])
}

model YearHistory {
   
    month         Int
    year          Int
    income        Int
    expense       Int
    userId        String  

     @@id([month, year, userId])
}